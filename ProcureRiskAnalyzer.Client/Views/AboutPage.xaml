<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProcureRiskAnalyzer.Client.Views.AboutPage"
             Title="About">
    <ScrollView Padding="20">
        <VerticalStackLayout Spacing="20">
            <Label Text="{Binding AppName}" 
                   FontSize="32" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,20,0,10"/>
            
            <Frame Padding="20" Margin="0,10">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Version:" FontSize="16" FontAttributes="Bold"/>
                    <Label Text="{Binding Version}" FontSize="14"/>
                    
                    <Label Text="Description:" FontSize="16" FontAttributes="Bold" Margin="0,10,0,0"/>
                    <Label Text="{Binding Description}" FontSize="14"/>
                    
                    <Label Text="Technologies:" FontSize="16" FontAttributes="Bold" Margin="0,10,0,0"/>
                    <Label Text="{Binding Technologies}" FontSize="14"/>
                    
                    <Label Text="Author:" FontSize="16" FontAttributes="Bold" Margin="0,10,0,0"/>
                    <Label Text="{Binding Author}" FontSize="14"/>
                </VerticalStackLayout>
            </Frame>
            
            <Button Text="Back" 
                    Command="{Binding GoBackCommand}"
                    Margin="0,20,0,0"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>


