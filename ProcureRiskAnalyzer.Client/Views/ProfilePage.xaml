<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:ProcureRiskAnalyzer.Client.Views"
             x:Class="ProcureRiskAnalyzer.Client.Views.ProfilePage"
             Title="Profile">
    <Grid RowDefinitions="Auto,*,Auto" Padding="20">
        <Label Text="User Profile" 
               FontSize="28" 
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,20,0,20"
               Grid.Row="0"/>
        
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="20">
                <Frame Padding="20" BackgroundColor="#f0f0f0">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Authentication Status:" 
                               FontSize="16" 
                               FontAttributes="Bold"/>
                        <Label Text="{Binding IsAuthenticated, StringFormat='Authenticated: {0}'}" 
                               FontSize="14"
                               TextColor="#2ecc71"/>
                        
                        <BoxView HeightRequest="1" 
                                 BackgroundColor="Gray" 
                                 Margin="0,10,0,10"/>
                        
                        <Label Text="Username:" 
                               FontSize="16" 
                               FontAttributes="Bold"/>
                        <Label Text="{Binding Username}" 
                               FontSize="18"
                               TextColor="#512BD4"/>
                        
                        <BoxView HeightRequest="1" 
                                 BackgroundColor="Gray" 
                                 Margin="0,10,0,10"/>
                        
                        <Label Text="Email:" 
                               FontSize="16" 
                               FontAttributes="Bold"/>
                        <Label Text="{Binding Email}" 
                               FontSize="18"
                               TextColor="#512BD4"/>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>
        
        <VerticalStackLayout Spacing="10" Grid.Row="2">
            <Button Text="Back to Home" 
                    Command="{Binding GoBackCommand}"
                    BackgroundColor="#3498db"
                    TextColor="White"
                    FontSize="18"
                    HeightRequest="50"/>
            
            <Button Text="Logout" 
                    Command="{Binding LogoutCommand}"
                    BackgroundColor="#e74c3c"
                    TextColor="White"
                    FontSize="18"
                    HeightRequest="50"/>
        </VerticalStackLayout>
        
        <views:LoadingOverlay IsVisible="{Binding IsLoading}" Grid.RowSpan="3"/>
    </Grid>
</ContentPage>

